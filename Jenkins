pipeline {
    agent any
    tools {
        maven "MAVEN"
        jdk "java"
    }
        stage('Build') {
            steps {
                dir("/var/lib/jenkins/workspace/mavenpipeline/pipeline") {
                sh 'mvn -B -DskipTests clean package'
                }
            }
        }
     }
    post {
       always {
          junit(
        allowEmptyResults: true,
        testResults: '*/test-reports/.xml'
      )
      }
   } 

